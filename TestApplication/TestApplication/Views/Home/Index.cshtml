                        //    if (valid) {
                        //        $("#Form2Data").text(JSON.stringify(data, null, 2))
                        //    } else {
                        //        $("#Form2Data").text("Form is NOT VALID. Did you fill out all fields?")
                        //    }
                        //}

                    },

                });
            }
            $(document).on('click', '.menu-item', function () {
                var NavName = $(this).children().text().trim();
                Load(NavName);
            })
        })
    </script>

